<odoo>
	<record id="view_general_configuration" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.invoice.scan</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[@name='integration']" position="inside">
				<div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_niova_invoice_scan" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Invoice Scan" for="module_niova_invoice_scan"/>
                        <div class="text-muted">
                            Synchronize scanned vouchers into invoices.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('module_niova_invoice_scan','=',False)]}">
	                        <div class="mt16 row">	                            
	                            <label for="is_mail_forward_address" class="col-xs-3 col-md-4 o_light_label" attrs="{'invisible':[('is_mail_forward_address', '=', False)]}"/>
	                            <field name="is_mail_forward_address" nolabel="1" attrs="{'invisible':[('is_mail_forward_address', '=', False)]}"/>
	                            
	                        	<label for="is_client_secret" class="col-md-4 o_light_label" attrs="{'invisible':[('is_mail_forward_address', '!=', False)]}"/>
	                            <field name="is_client_secret" password="True" nolabel="1" attrs="{'invisible':[('is_mail_forward_address', '!=', False)]}"/> 
	                        </div>
	                        
	                        <div attrs="{'invisible':[('is_client_secret', '!=', False)]}">
                            	<button type="object" name="recieve_activation_key" string="Get Activation Key" icon="fa-arrow-right" class="oe_link"/>
                        	</div>
                        	
                        	<div attrs="{'invisible':['|', ('is_client_secret', '=', False), ('is_mail_forward_address', '!=', False)]}">
                            	<button type="object" name="activate_invoice_scan" string="Activate Key" icon="fa-check" class="btn-primary o_field_widget"/>
                        	</div>
	                        
	                        <div attrs="{'invisible':[('is_mail_forward_address', '=', False)]}">
                            	<button type="object" name="action_upload_debitors" string="Upload companies to invoice scan as debitors" icon="fa-upload" class="btn-primary"/>
                        	</div>
                        	
                        	<div attrs="{'invisible':[('is_mail_forward_address', '=', False)]}">
                            	<button type="object" name="reactivate_invoice_scan" string="Activate New Key" icon="fa-rotate-left" class="oe_link"/>
                        	</div>
                    	</div>
                    </div>
                </div>
			</xpath>
		</field>
	</record>
</odoo>
